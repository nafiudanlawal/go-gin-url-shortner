<html>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>{{ .title }} | Url Shortner</title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/static/styles.css">
</head>

<body>
	<!--[if lt IE 7]>
			<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
		<![endif]-->

	<div id="loading-block" class="centered container flex-row">
		<img id="loading-img" src="/static/200.gif" alt="loading" title="laoding" />
	</div>
	<div id="loaded-block" class="hidden flex-column centered">
		<h2>Your url is </h2>
		<h3 id="full-url-text"></h3>
		<div class="centered container flex-row">
			<h5>Click here to goto the actual link</h5>
			<a class="button" id="navigate-link" href="">On you way</a>
		</div>
	</div>



	<span class="hidden" id="url-code">{{ .code }}</span>
	<script>
		addEventListener("DOMContentLoaded", (event) => {
			const loadingBlock = document.getElementById("loading-block")
			const loadedBlock = document.getElementById("loaded-block")
			const urlText = document.getElementById("full-url-text")
			const code = document.getElementById("url-code")
			const link = document.getElementById("navigate-link")

			fetch(`/shorten/${code.innerText}`)
				.then(res => res.json())
				.then(res => {
					link.href = res["Url"]
					link.innerHTML = res["Url"]
					urlText.innerHTML = res["Url"]
					loadingBlock.classList.add("hidden");
					loadedBlock.classList.remove("hidden");
				})

		})
	</script>
</body>

</html>